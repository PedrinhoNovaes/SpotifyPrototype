<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpotifyPrototype.Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SpotifyPrototype.Admin.styles.css" asp-append-version="true" />
    <head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .table-striped-columns tbody tr:nth-child(odd) {
            background-color: #343a40; /* Dark grey */
            color: #ffffff; /* White text */
        }
        .table-striped-columns tbody tr:nth-child(even) {
            background-color: #ffffff; /* White */
            color: #000000; /* Black text */
        }
        .table-striped-columns thead tr td {
            font-weight: bold; /* Bold column titles */
        }
    </style>
</head>
    <head>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

    <style>
        body {
            background: linear-gradient(to bottom, pink, white);
        }
        .navbar-text {
            flex-grow: 1;
            text-align: center;
        }
        .nav-link {
            margin-right: 15px;
            background-color: lightblue;
            border-radius: 5px;
            color: white !important;
            padding: 10px 20px;
            transition: background-color 0.3s, color 0.3s;
        }
        .nav-link:hover {
            background-color: #007bff; /* Azul mais escuro */
            color: white !important;
        }
        header {
            background: linear-gradient(to right, #e6e6fa, #ff69b4); /* Lilás para rosa */
        }
        .sign-out-button {
            background-color: #ff69b4;
            border: none;
            border-radius: 5px;
            color: white;
            padding: 5px 10px;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .sign-out-button:hover {
            background-color: #ff1493; /* Rosa mais escuro */
            color: white;
        }
        .navbar-text .user-name {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
               
               
                @if (User.Identity.IsAuthenticated)
                {
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Autor" asp-action="Index">Artists</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Album" asp-action="Index">Albums</a>
                                </li>
                            </ul>
                            <span class="navbar-text">
                                <span class="user-name">Hello, @User.Identity.Name</span>
                                <a class="sign-out-button" href="/Account/Logout">Sign Out</a>
                            </span>
                        </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SpotifyPrototype.Admin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
