@model SpotifyPrototype.Application.Streaming.Dto.MusicaDto

<div class="text-center">
    <h1 class="display-4">Register Music</h1>
    <h6>Author: @ViewBag.AuthorName</h6>
</div>

<form method="post" asp-controller="Musica" asp-action="Save">
    @Html.Hidden("IdAuthor", @ViewBag.IdAuthor, new { Type = "hidden" })

    <div class="row mb-3">
        <label for="Nome" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Nome"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="IdEstiloMusical" class="col-sm-2 col-form-label">Music Style</label>
        <div class="col-sm-10">
            <select asp-for="IdEstiloMusical" class="form-control" asp-items="@ViewBag.Estilos">
                <option value="">Select a music style</option>
            </select>
            <span class="form-field-invalid" asp-validation-for="IdEstiloMusical"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="Duracao" class="col-sm-2 col-form-label">Duration</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Duracao, new { @class = "form-control", Type = "number" })
            <span class="form-field-invalid" asp-validation-for="Duracao"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="Letra" class="col-sm-2 col-form-label">Lyrics</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Letra, new { @class = "form-control", rows = 5, cols = 50 })
            <span class="form-field-invalid" asp-validation-for="Letra"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
