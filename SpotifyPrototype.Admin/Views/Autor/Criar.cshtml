@model SpotifyPrototype.Application.Streaming.Dto.AutorDto

<form method="post" asp-controller="Author" asp-action="Save">
    <div class="row mb-3">
        <label for="Name" class="col-sm-2 col-form-label"><b>Name</b></label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Nome"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Description" class="col-sm-2 col-form-label"><b>Description</b></label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Descricao, new { @class = "form-control", rows = 5, cols = 50 })
            <span class="form-field-invalid" asp-validation-for="Descricao"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="ImageURL" class="col-sm-2 col-form-label"><b>Image URL</b></label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Backdrop, new { @class = "form-control", rows = 5, cols = 50 })
            <span class="form-field-invalid" asp-validation-for="Backdrop"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
